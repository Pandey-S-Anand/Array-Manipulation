//Method 1

class Solution {
    static void rotateArr(int arr[], int k) {
        k = k % arr.length;
        while (k-- > 0) {
            leftShiftBy1(arr);
        }
    }

    private static void leftShiftBy1(int[] arr) {
        int temp = arr[0];
        for (int i = 0; i < arr.length - 1; i++) {
            arr[i] = arr[i + 1];
        }
        arr[arr.length - 1] = temp;
    }
}


//Method 2

class Solution {
    static void rotateArr(int arr[], int k) {
        // Handle cases where k is greater than array length Rotating 'arr.length' times gives the same array
        k = k % arr.length;

        // Temporary array to store the first k elements
        int[] temp = new int[k];

        // Step 1: Copy first k elements into temp. These elements will be placed at the end after rotation
        for (int i = 0; i < temp.length; i++) {
            temp[i] = arr[i];
        }

        // Step 2: Shift the remaining elements (from index k till last index) to the left by k positions
        for (int i = 0; i < arr.length - k; i++) {
            arr[i] = arr[i + k];
        }

        // Step 3: Copy the saved elements from temp to the last k positions of the array
        for (int i = arr.length - k; i < arr.length; i++) {
            arr[i] = temp[i - (arr.length - k)];
        }
    }
}



//Method 3

class Solution {
    static void rotateArr(int arr[], int k) {
        k = k % arr.length;
        int[] twice = new int[2 * arr.length];

        for (int i = 0; i < arr.length; i++) {
            twice[i] = twice[i + arr.length] = arr[i];
        }

        for (int i = 0; i < arr.length; i++) {
            arr[i] = twice[i + k];
        }
    }
}


//Method 4 (Reversal algorithm for array rotation)

/*
Dry Run:

Input:
arr = [1, 2, 3, 4, 5]
k = 2

Step 1: Reverse first k elements (index 0 to k-1)
arr = [2, 1, 3, 4, 5]

Step 2: Reverse remaining elements (index k to n-1)
arr = [2, 1, 5, 4, 3]

Step 3: Reverse whole array (index 0 to n-1)
arr = [3, 4, 5, 1, 2]

Output:
[3, 4, 5, 1, 2]
*/

class Solution {
    static void rotateArr(int arr[], int k) {
        k = k % arr.length; // In case the rotating factor is greater than array length
        reverseArray(arr, 0, k - 1);
        reverseArray(arr, k, arr.length - 1);
        reverseArray(arr, 0, arr.length - 1);
    }

    private static void reverseArray(int[] arr, int start, int end) {
        while (start < end) {
            swap(arr, start++, end--);
        }
    }

    private static void swap(int[] arr, int i, int j) {
        int temp = arr[i];
        arr[i] = arr[j];
        arr[j] = temp;
    }
}
