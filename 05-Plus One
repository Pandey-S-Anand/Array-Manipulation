//Bruteforce Approach

class Solution {
    public int[] plusOne(int[] digits) {
        int i = digits.length - 1, carry = 1; // since we are adding one
        LinkedList<Integer> incrementedNumber = new LinkedList<>();

        while (i >= 0 || carry == 1) {
            int digit = i >= 0 ? digits[i--] : 0;
            int sum = digit + carry;
            incrementedNumber.addFirst(sum % 10);
            carry = sum / 10;
        }

        return toArray(incrementedNumber);
    }

    private int[] toArray(List<Integer> list) {
        int[] arr = new int[list.size()];

        for (int i = 0; i < arr.length; i++) {
            arr[i] = list.get(i);
        }

        return arr;
    }
}


//Optimal Approach

class Solution {
    public int[] plusOne(int[] digits) {
        int carry = 1;

        for (int i = digits.length - 1; i >= 0; i--) {
            int sum = digits[i] + carry;
            digits[i] = sum % 10;
            carry = sum / 10;

            if (carry == 0) {
                return digits; // no need to continue once carry is gone
            }
        }

        // If carry is still 1, it means the number was all 9s (e.g., 9, 99, 999).  The result becomes 100...0, so we need a new array with one extra digit.
        int[] incrementedNumber = new int[digits.length + 1];
        incrementedNumber[0] = 1;

        return incrementedNumber;
    }
}
